<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/borde_genero">
    <TextView
        android:id="@+id/id_txv_genero_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fantasia"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:background="#33BDBDBD"
        android:padding="8dp"
        android:layout_margin="1dp"/>
    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/colorPrimary"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/id_img_genero_team1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:elevation="4dp"
            android:scaleType="centerCrop"
            android:background="@drawable/avengers_infinity_war"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="0.5dp" />
        <TextView
            android:id="@+id/id_txv_genero_teamname1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avengers Infinity War"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"/>
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/colorPrimary"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/id_img_genero_team2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/deadpool2jpg"
            android:scaleType="centerCrop"
            android:elevation="4dp"
            app:civ_border_width="0.5dp"
            app:civ_border_color="@color/colorPrimaryDark"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/id_txv_genero_teamname2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deadpool2"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"/>

    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/colorPrimary"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/id_img_genero_team3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/deadpool2jpg"
            android:scaleType="centerCrop"
            android:elevation="4dp"
            app:civ_border_width="0.5dp"
            app:civ_border_color="@color/colorPrimaryDark"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/id_txv_genero_teamname3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rusia"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"/>

    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/colorPrimary"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/id_img_genero_team4"
            android:layout_width="100dp"
            android:layout_height="100dp"
           android:background="@drawable/avengers_infinity_war"
            android:scaleType="centerCrop"
            android:elevation="4dp"
            app:civ_border_width="0.5dp"
            app:civ_border_color="@color/colorPrimaryDark"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/id_txv_genero_teamname4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rusia"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"/>

    </LinearLayout>


</LinearLayout>